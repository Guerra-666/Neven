---
const { title, clients } = Astro.props

// Determinar el tipo de layout basado en la cantidad de clientes
const isSingleClient = clients.length === 1
const isSmallSet = clients.length > 1 && clients.length <= 6
const isManyClients = clients.length > 6
---

<section class="anim-wrapper bs-container py-16 sm:py-20 lg:py-24 grid">
  <!-- Title -->
  { title && <h2 class="bs-h2 text-center" set:html={ title } />}
  
  <!-- Clients Section -->
  <div class="mt-8 sm:mt-12 flex flex-col items-center">
    { isSingleClient && (
      <!-- Single Client - Featured Display -->
      <div class="max-w-md w-full">
        <div class="group rounded-2xl overflow-hidden bg-gradient-to-br from-bs-surface-2/80 to-bs-surface-2/60 hover:from-bs-surface-2 hover:to-bs-surface-2/90 transition-all duration-500 shadow-lg hover:shadow-xl border border-bs-surface-2/30">
          <a 
            href={ clients[0].link }
            target="_blank"
            rel="noopener noreferrer"
            class="block"
          >
            <!-- Logo Container -->
            <div class="aspect-[16/9] p-8 flex items-center justify-center">
              <img
                src={ clients[0].image }
                alt={ clients[0].title }
                class="max-w-full max-h-full object-contain opacity-70 group-hover:scale-110 group-hover:opacity-100 group-hover:-rotate-2 ease-bs-bounce transition-all duration-1000"
                loading="lazy"
              >
            </div>
            <!-- Client name -->
            { clients[0].title && (
              <div class="px-6 pb-6">
                <p class="text-center text-bs-text-muted text-sm opacity-80 group-hover:opacity-100 transition-opacity duration-300 font-medium">
                  { clients[0].title }
                </p>
              </div>
            )}
          </a>
        </div>
      </div>
    )}

    { isSmallSet && (
      <!-- Small set of clients - Larger display -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl w-full">
        {
          clients.map( item =>
            <div class="group rounded-xl overflow-hidden bg-gradient-to-br from-bs-surface-2/70 to-bs-surface-2/50 hover:from-bs-surface-2/90 hover:to-bs-surface-2/70 transition-all duration-300 shadow-md hover:shadow-lg border border-bs-surface-2/20">
              <a 
                href={ item.link }
                target="_blank"
                rel="noopener noreferrer"
                class="block"
              >
                <!-- Logo Container -->
                <div class="aspect-[4/3] p-6 flex items-center justify-center">
                  <img
                    src={ item.image }
                    alt={ item.title }
                    class="max-w-full max-h-full object-contain opacity-70 group-hover:scale-105 group-hover:opacity-100 group-hover:-rotate-1 ease-bs-bounce transition-all duration-500"
                    loading="lazy"
                  >
                </div>
                <!-- Client name -->
                { item.title && (
                  <div class="px-4 pb-4">
                    <p class="text-center text-bs-text-muted text-xs opacity-70 group-hover:opacity-100 transition-opacity duration-300 font-medium line-clamp-2">
                      { item.title }
                    </p>
                  </div>
                )}
              </a>
            </div>
          )
        }
      </div>
    )}

    { isManyClients && (
      <!-- Many clients - Compact grid -->
      <div class="w-full max-w-6xl">
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
          {
            clients.map( item =>
              <div class="group rounded-lg overflow-hidden bg-bs-surface-2/60 hover:bg-bs-surface-2/80 transition-all duration-300 hover:shadow-md border border-bs-surface-2/10 hover:border-bs-surface-2/30">
                <a 
                  href={ item.link }
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block"
                >
                  <!-- Logo Container -->
                  <div class="aspect-square p-4 flex items-center justify-center">
                    <img
                      src={ item.image }
                      alt={ item.title }
                      class="max-w-full max-h-full object-contain opacity-60 group-hover:scale-105 group-hover:opacity-90 transition-all duration-300"
                      loading="lazy"
                    >
                  </div>
                  <!-- Client name -->
                  { item.title && (
                    <div class="px-3 pb-3">
                      <p class="text-center text-bs-text-muted text-xs opacity-60 group-hover:opacity-90 transition-opacity duration-300 line-clamp-2 font-medium leading-tight">
                        { item.title }
                      </p>
                    </div>
                  )}
                </a>
              </div>
            )
          }
        </div>
      </div>
    )}
  </div>
</section>