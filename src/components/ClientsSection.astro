---
const { title, clients } = Astro.props
---

<section class="anim-wrapper bs-container bs-mt-lg grid">
  <!-- Title -->
  { title && <h2 class="bs-h2 text-center" set:html={ title } />}
  
  <!-- Featured Client Section -->
  <div class="bs-mt-md flex flex-col items-center">
    <!-- Single Client Logo - Destacado -->
    {
      clients.length === 1 ? (
        <div class="mb-8">
          <a 
            class="group py-12 px-8 rounded-2xl flex place-content-center bg-gradient-to-br from-bs-surface-2/80 to-bs-surface-2/60 hover:from-bs-surface-2 hover:to-bs-surface-2/90 transition-all duration-500 shadow-lg hover:shadow-xl border border-bs-surface-2/30" 
            href={ clients[0].link }
          >
            <img
              src={ clients[0].image }
              alt={ clients[0].title }
              class="opacity-70 max-w-48 min-h-20 group-hover:scale-110 group-hover:-translate-y-2 group-hover:opacity-100 group-hover:-rotate-2 ease-bs-bounce transition-all duration-1000"
              width="200"
              height="60"
              loading="lazy"
            >
          </a>
          <!-- Optional: Client name or description -->
          <p class="text-center mt-4 text-bs-text-muted text-sm opacity-80">
            Universidad Autonoma del Estado de Hidalgo
          </p>
        </div>
      ) : (
        <!-- Multiple Clients Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 place-content-center gap-4 w-full">
          {
            clients.map( item =>
              <a 
                class="group py-10 px-5 rounded-xl flex place-content-center bg-bs-surface-2/70 hover:bg-bs-surface-2 transition-colors duration-300" 
                href={ item.link }
              >
                <img
                  src={ item.image }
                  alt={ item.title }
                  class="opacity-60 max-w-32 min-h-16 group-hover:scale-[1.05] group-hover:-translate-y-1 group-hover:opacity-100 group-hover:-rotate-1 ease-bs-bounce transition-all duration-1000"
                  width="140"
                  height="40"
                  loading="lazy"
                >
              </a>
            )
          }
        </div>
      )
    }
  </div>
</section>